}

.share-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.share-button.primary-share {
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    border-color: hsl(var(--primary));
}

.share-button.primary-share:hover:not(:disabled) {
    background: hsl(var(--primary) / 0.9);
}

/* Export Options */
.export-options {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.option-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.option-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 0;
    cursor: pointer;
    font-size: 13px;
    color: hsl(var(--foreground));
}

.option-item input[type="radio"] {
    width: 16px;
    height: 16px;
    margin: 0;
}

/* Responsive Design */
