    background: hsl(var(--primary) / 0.9);
}

.upload-info {
    font-size: 11px;
    color: hsl(var(--muted-foreground));
}

/* Placeholder Content */
.placeholder-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    padding: 48px;
    text-align: center;
}

.placeholder-icon {
    color: hsl(var(--muted-foreground));
}

.placeholder-text h3 {
    font-size: 16px;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0 0 4px 0;
}

.placeholder-text p {
    font-size: 14px;
    color: hsl(var(--muted-foreground));
    margin: 0;
}

/* Image Preview */
.image-preview {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16px;
    overflow: hidden; /* Prevent scroll bars */
}

.preview-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 2px 8px hsl(var(--foreground) / 0.1);
    transition: all 0.3s ease; /* Smooth transitions when size changes */
}

/* Enhanced image should fit completely within the panel - no cutoff */
#enhanced-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 4px 12px hsl(var(--foreground) / 0.15);
    transition: all 0.3s ease;
}

/* Share Options Panel */
.share-options-panel {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.share-options-panel .panel-header {
    padding: 16px 20px;
    border-bottom: 1px solid hsl(var(--border));
    background: hsl(var(--muted) / 0.3);
}

.share-options-panel .panel-title {
    font-size: 14px;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0;
}

.share-options-panel .panel-content {
    flex: 1;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 24px;
}

/* Share Actions */
.share-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.share-button {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: hsl(var(--background));
    border: 1px solid hsl(var(--border));
    border-radius: 6px;
    color: hsl(var(--foreground));
    font-size: 13px;
    font-weight: 500;
