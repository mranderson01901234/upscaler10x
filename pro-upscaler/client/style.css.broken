    .enterprise-layout {
        grid-template-columns: 200px 1fr 180px;
        gap: 16px;
        padding: 16px;
    }
    
    .image-comparison-area {
        grid-template-columns: 1fr 1.8fr; /* Maintain enhanced result prominence */
        gap: 16px;
    }
}

@media (max-width: 900px) {
    .enterprise-layout {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr auto;
        gap: 16px;
    }
    
    .processing-status-panel,
    .share-options-panel {
        order: 2;
    }
    
    .image-comparison-area {
        order: 1;
        grid-template-columns: 1fr; /* Stack vertically on mobile */
        gap: 16px;
    }
    
    /* Enhanced panel gets more height on mobile */
    .enhanced-panel {
        min-height: 400px;
    }
    
    .original-panel {
        min-height: 300px;
    }
}

@media (max-width: 768px) {
    #enhanced-container .image-preview {
        min-height: 350px; /* Slightly smaller on very small screens */
        padding: 12px;
    }
    
